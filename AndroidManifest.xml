<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.checkout"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.NFC" />

    <uses-feature android:name="android.hardware.nfc" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.checkout.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.checkout.ScanBadgeActivity"
            android:label="@string/title_activity_scan_badge" >
        </activity>
        <activity
            android:name="com.example.checkout.ViewUserInfoActivity"
            android:label="@string/title_activity_view_user_info" >
        </activity>
        <activity
            android:name="com.example.checkout.ViewItemInfoActivity"
            android:label="@string/title_activity_view_item_info" >
        </activity>
        <activity
            android:name="com.example.checkout.ItemCheckOutActivity"
            android:label="@string/title_activity_item_check_out" >
        </activity>
        <activity
            android:name="com.example.checkout.ItemCheckInActivity"
            android:label="@string/title_activity_item_check_in" >
        </activity>
    </application>

</manifest>
